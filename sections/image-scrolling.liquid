<script src="{{ 'scrolling-image-list.js' | asset_url }}" defer></script>
{%- capture info_banner -%}
{%- liquid 
    assign section_st = section.settings
    assign page_width = settings.cntwd | append: 'px'
    if section_st.sw
        assign page_width = '100vw'
    endif
-%}
<div class="sec_cov{% if section_st.hidem %} hide-sm{% endif %}{% if section_st.hided %} hide-md hide-lg{% endif %}" style="--sst:{{ section_st.sst }}px;--ssb:{{ section_st.ssb }}px;--sstm:{{ section_st.sstm }}px;--ssbm:{{ section_st.ssbm }}px;--rounded:{{section_st.brad }}px;">
    <div class="fw-sec npd hide-md hide-lg">
        <slide-section class="image-with-text swiper" data-swiper='{ "slidesPerView":"1", "loop":true, "preloadImages":false, "lazy":true, "pagination":{ "el":".swpg{{ section.id }}","clickable":true }}'>
            <div class="swiper-wrapper">
              {% for block in section.blocks limit: section.blocks.size %}
                  {% assign blk_st = block.settings %}
                  {% assign sindex = forloop.index %}
                    <div class="swiper-slide scroll-img-slide w_100 of_hidden" style="--bg:{% if blk_st.bgg != blank %}{{ blk_st.bgg }}{% else %}{{ blk_st.txtbg }}{% endif %};--mwd:{{ blk_st.image.width }}px;" data-slide="{{ sindex }}" id="{{ block.id }}" {{ block.shopify_attributes }}>
                      <div class="of_hidden fl f-aic mb20 {% render 'animate-data', css:true %}" {% render 'animate-data' %}>
                          {% if blk_st.image != blank %}
                              {% if blk_st.link != blank %}<a class="db w_100" href="{{ blk_st.link }}">{% endif %}
                                  {%- liquid
                                      assign column = 100.00 | divided_by: 50 | times: 1
                                      assign divide_colunm = 1.00 | divided_by: column | round: 2
                                  %}
                                  {%- capture sizes -%}
                                    (min-width:1024px) calc(({{ page_width }} - 30px * {{ column | minus: 1 }}) * {{ divide_colunm }}), calc(100vw - 30px)
                                  {%- endcapture -%}
                                  {% assign img_alt = blk_st.image.alt | default: blk_st.title | default: blk_st.titles %}
                                  {{ blk_st.image | image_url: width: blk_st.image.width | image_tag: loading:'lazy', class:'imgAt m_auto', alt:img_alt, sizes:sizes, widths:"320,400,560,740,900,1200" }}
                              {% if blk_st.link != blank %} </a> {% endif %}
                          {% else %}
                              {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                          {% endif %}
                      </div>
                      <div class="row_text1">
                             <div class="row-text w_100 {{ blk_st.talign }} {% render 'animate-data', css:true %}" {% render 'animate-data' %} style="--cwd:{{ blk_st.cwd }}px;">
                              {% if blk_st.titles != blank %}<span class="rgTxt mb5" style=" --cl:{{ blk_st.scl }};--fs:{{ blk_st.sfs }}px;--fw:{{ blk_st.sfw }};">{{ blk_st.titles }}</span>{% endif %}
                              {% if blk_st.title != blank %}<{{ blk_st.htag }} class="rgTxt {{ blk_st.tff }} mb{{ blk_st.tmbm }} mb{{ blk_st.tmb }}-md" style="--cl:{{ blk_st.cl }};--fs:{{ blk_st.fs }}px;--fsm:{{ blk_st.fsm }}px;--fw:{{ blk_st.fw }};--lh:{{ blk_st.lh }};">{{ blk_st.title }}</{{ blk_st.htag }}>{% endif %}
                              {% if blk_st.text != blank %}<div class="rgTxt rte mb{{ blk_st.txtmbm }} mb{{ blk_st.txtmb }}-md"  style=" --cl:{{ blk_st.tcl }};--fs:{{ blk_st.tfs }}px;--fsm:{{ blk_st.tfsm }}px;--fw:{{ blk_st.tfw }};--tlh:{{ blk_st.lh }};">{{ blk_st.text }}</div>{% endif %}
                              {% if blk_st.btn != blank and blk_st.link != blank %}
                                  <a href="{{ blk_st.link }}" class="btn {{ blk_st.btn-size }} {{ blk_st.btn-style }}">{{ blk_st.btn }}</a>
                              {% endif %}
                          </div>
                      </div>
                  </div>        
              {% endfor %}
            </div>
            <div class="swiper-pagination swpg{{ section.id }} fl f-wrap f-jcc tc"></div>
      </slide-section>
    </div>
    <scrolling-image-list id="{{ section.id }}" data-current-index="1" class="db scrolling-image-list pr hide-sm">
        {% for block in section.blocks %}
            {% assign blk_st = block.settings %}
            {% assign sindex = forloop.index %}
            <div class="scroll-slide-bg pa w_100 h_100 setAct{% if forloop.first %} active{% endif %}" data-index="{{ sindex }}" style="--bg:{% if blk_st.bgg != blank %}{{ blk_st.bgg }}{% else %}{{ blk_st.txtbg }}{% endif %};"></div>
        {% endfor %}
    
        <div class="fl gap{% if section_st.sw %} fw-sec{% if section_st.npd %} npd{% endif %}{% else %} page-width{% endif %}" style="--gap:50px;">
            <div class="fl1">
              {% for block in section.blocks %}
                  {% assign blk_st = block.settings %}
                  {% assign index = forloop.index %}
                  <div class="scrolling-image-list__image setAct{% if forloop.first %} active{% endif %}" data-index="{{ index }}" tabindex="0">
                       <div class="pr tc">
                           {% if blk_st.image != blank %}
                              {% if blk_st.link != blank %}<a class="db w_100" href="{{ blk_st.link }}">{% endif %}
                                  {%- liquid
                                      assign column = 100.00 | divided_by: 50 | times: 1
                                      assign divide_colunm = 1.00 | divided_by: column | round: 2
                                  %}
                                  {%- capture sizes -%}
                                    (min-width:1024px) calc(({{ page_width }} - 30px * {{ column | minus: 1 }}) * {{ divide_colunm }}), calc(100vw - 30px)
                                  {%- endcapture -%}
                                  {% assign img_alt = blk_st.image.alt | default: blk_st.title | default: blk_st.titles %}
                                  {{ blk_st.image | image_url: width: blk_st.image.width | image_tag: loading:'lazy', class:'imgAt m_auto', alt:img_alt, sizes:sizes, widths:"320,400,560,740,900,1200" }}
                              {% if blk_st.link != blank %} </a> {% endif %}
                          {% else %}
                              {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                          {% endif %}   
                       </div>
                  </div>
              {% endfor %}
            </div>
    
            <div class="fl1 scroll-content-col pr zi1">
              <div class="scrolling-image-list__content-area">
                <div class="feature-text-paired pr">
                    {% for block in section.blocks %}
                      {% assign blk_st = block.settings %}
                      {% assign index = forloop.index %}
                        <div class="row_text scrolling-image-list__content setAct{% if forloop.first %} active{% endif %}" data-index="{{ index }}" tabindex="0">
                               <div class="row-text w_100 {{ blk_st.talign }}{% if blk_st.txtpd %} nobg{% endif %} {% render 'animate-data', css:true %}" {% render 'animate-data' %} style="--cwd:{{ blk_st.cwd }}px;">
                                {% if blk_st.titles != blank %}<span class="rgTxt mb5" style=" --cl:{{ blk_st.scl }};--fs:{{ blk_st.sfs }}px;--fw:{{ blk_st.sfw }};">{{ blk_st.titles }}</span>{% endif %}
                                {% if blk_st.title != blank %}<{{ blk_st.htag }} class="rgTxt {{ blk_st.tff }} mb{{ blk_st.tmbm }} mb{{ blk_st.tmb }}-md" style="--cl:{{ blk_st.cl }};--fs:{{ blk_st.fs }}px;--fsm:{{ blk_st.fsm }}px;--fw:{{ blk_st.fw }};--lh:{{ blk_st.lh }};">{{ blk_st.title }}</{{ blk_st.htag }}>{% endif %}
                                {% if blk_st.text != blank %}<div class="rgTxt rte mb{{ blk_st.txtmbm }} mb{{ blk_st.txtmb }}-md"  style=" --cl:{{ blk_st.tcl }};--fs:{{ blk_st.tfs }}px;--fsm:{{ blk_st.tfsm }}px;--fw:{{ blk_st.tfw }};--tlh:{{ blk_st.lh }};">{{ blk_st.text }}</div>{% endif %}
                                {% if blk_st.btn != blank and blk_st.link != blank %}
                                    <a href="{{ blk_st.link }}" class="btn {{ blk_st.btn-size }} {{ blk_st.btn-style }}">{{ blk_st.btn }}</a>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
              </div>
            </div>
        </div>
    </scrolling-image-list>
</div>
{%- endcapture -%}
