        {
          "group": "Landscape",
          "value": "50",
          "label": "0:5"
        },
        {
          "group": "Landscape",
          "value": "60",
          "label": "0:6"
        },
        {
          "group": "Landscape",
          "value": "70",
          "label": "0:7"
        },
        {
