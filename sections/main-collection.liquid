	"name": "Collection Main",
	"class": "collectionPage",
	"settings": [
		{
			"type": "checkbox",
			"id": "clttl",
			"label": "Show collection name?",
			"default": true
		},
		{
			"type": "checkbox",
			"id": "climg",
			"label": "Show collection image?",
			"default": false
		},		
		{
			"type": "select",
			"id": "des_pos",
			"label": "Description position",
			"default": "2",
			"options": [        
				{ "value": "1", "label": "Above Products" },          
				{ "value": "2", "label": "Below Products" } 		  
			]
		},
		{
			"type": "checkbox",
			"id": "talign",
			"label": "Text center?",
			"default": false
		},
