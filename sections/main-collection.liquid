{%- capture collection_page -%}
{%- liquid
    assign is_rtl = false
    assign list_rtl = 'ar,dv,ha,he,ku,fa,ur,ug' | split: ','
    if list_rtl contains request.locale.iso_code or settings.rtl
        assign is_rtl = true
    endif
    if is_rtl
        assign left_right = 'right'      
    else
        assign left_right = 'left'      
    endif
    
    assign section_st = section.settings
    assign page_width = settings.cntwd | append: 'px'
    if section_st.sw
        assign page_width = '100vw'
    endif
    assign pageurl = canonical_url | split:'type=' | last

    assign sort_by = collection.sort_by | default: collection.default_sort_by
-%}

{%- capture sct_styles -%}
{% style %}
  :root { 
    --filter_bg:{{ section_st.filter_bg }};	--tfilter_bdr:{{ section_st.flbdr }}; --ttl_fs:{{ section_st.ttl_fs }}px; --filterby:{{ section_st.ttl_fs | minus:1 }}px; --ttl_cl:{{ section_st.ttl_cl }};
    --opt_fs:{{ section_st.opt_fs }}px; --optp:{{ section_st.opt_fs | plus : 1 }}px; --opt_cl:{{ section_st.opt_cl }};
    --filter_bdr:{{ section_st.filter_bdr }}; --act_filter_bdr:{{ section_st.act_filter_cl }}; --act_filter_cl:{{ section_st.act_filter_cl }}; --act_filter_bg:{{ section_st.act_filter_bg }};
    --opt_cl_hov :{{ section_st.opt_cl_hov }}; --crsymbol:'{{ cart.currency.symbol }}'; --sidebar_bg:{{ section_st.sidebar_bg }};
    --swatch_size :{{section_st.swatch_size}}px; --swatch_rounded:{{section_st.swatch_rounded}}px;
    /* {%- if section.settings.headings_cl != 'rgba(0,0,0,0)' and section.settings.headings_cl != blank -%}--all_text:{{section_st.headings_cl}}; {% endif %} */
  }
  
  {%- if section_st.dis_botbdr -%}
  .filterDD {margin:5px 0 23px;}
  .filterBx {margin-bottom:0;}
  .sdBlock {margin-bottom:20px }
  {%- endif -%}

  {%- if section_st.sbg and section_st.sbpos != 'top' -%}
    @media only screen and (min-width:1024px){
     #main-collection-filters:not(.sb_popup) { padding:25px 30px;  }
    }
    #main-collection-filters { background:{{ section_st.sidebar_bg }}; border:1px solid {{ section_st.sidebar_bdr }};}
 {%- endif -%}

 {%- if section_st.tbg -%}
   .flTop { padding:10px 20px; background-color:var(--filter_bg); border:1px solid var(--tfilter_bdr); }
 {%- endif -%}
   price-range.flList .field:before { content:'{{ cart.currency.symbol }}'; position:absolute; top:8px; {{ left_right }}:15px; font-weight:500; color:var(--color-main-text); }
{% endstyle %}
{%- endcapture -%}
{{- sct_styles | strip_newlines | remove:'	' -}}
  
{%- paginate collection.products by section_st.prpp -%}

{%- capture active_filters -%}
  	<div id="activeFilters" class="active-facets fl f-wrap gap" style="--gap:10px;">
      <a href="{{ collection.url }}?sort_by={{ sort_by }}&pgview={% if pageurl == 'list' %}list{% else %}grid{% endif %}" class="active-fl removefl">{{ 'collections.general.clear_all' | t }}</a>
        {%- for filter in collection.filters -%}
            {%- for value in filter.active_values -%}
                <a class="active-fl removefl" href="{{ value.url_to_remove }}">{{ value.label | escape }} <svg class="at-icon"><use xlink:href="#icon-close"></use></svg></a>
            {%- endfor -%}
            {%- if filter.type == "price_range" -%}
              {%- assign min_value = filter.min_value.value -%}
              {%- assign max_value = filter.max_value.value -%}

              {%- if filter.type == "price_range" -%}
                {%- liquid
                  assign min_value = filter.min_value.value | default: 0
                  assign max_value = filter.max_value.value | default: filter.range_max
                  
                  assign has_custom_price = false
                  if min_value > 0 or max_value < filter.range_max
                    assign has_custom_price = true
                  endif
                -%}

                {%- if has_custom_price -%}
                  <a class="active-fl removefl sss" href="{{ filter.url_to_remove }}">
                    {{ min_value | money }} - {{ max_value | money }}
                    <svg class="at-icon"><use xlink:href="#icon-close"></use></svg>
                  </a>
                {%- endif -%}
              {%- endif -%}
            {%- endif -%}
            {% comment %} {%- if filter.type == "price_range" and filter.min_value.value != nil or filter.max_value.value != nil -%}
                <a class="active-fl removefl sss" href="{{ filter.url_to_remove }}">
                  {% if filter.min_value.value %}{{ filter.min_value.value | money }}{% else %}{{ 0 | money }}{% endif %} - {% if filter.max_value.value %}{{ filter.max_value.value | money }}{% else %}{{ filter.range_max | money }}{% endif %}
                  <svg class="at-icon"><use xlink:href="#icon-close"></use></svg>
                </a>
            {%- endif -%} {% endcomment %}
        {%- endfor -%}
	</div>
{%- endcapture -%}

