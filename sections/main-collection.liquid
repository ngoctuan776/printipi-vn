        <button type="button" title="List View" class="change-view{% if pageurl == 'list' %} active_view{% endif %}" data-view="list" style="color:var(--all_text);"><svg focusable="false" class="icon at-icon" viewBox="0 0 18 18" role="presentation"> <path d="M8 1.030067h9c.5522847 0 1 .44771525 1 1s-.4477153 1-1 1H8c-.55228475 0-1-.44771525-1-1s.44771525-1 1-1zm0 7h9c.5522847 0 1 .44771525 1 1s-.4477153 1-1 1H8c-.55228475 0-1-.44771525-1-1s.44771525-1 1-1zm0 7h9c.5522847 0 1 .4477153 1 1s-.4477153 1-1 1H8c-.55228475 0-1-.4477153-1-1s.44771525-1 1-1zm-7-15h2c.55228475 0 1 .44771525 1 1v2c0 .55228475-.44771525 1-1 1H1c-.55228475 0-1-.44771525-1-1v-2c0-.55228475.44771525-1 1-1zm0 7h2c.55228475 0 1 .44771525 1 1v2c0 .5522847-.44771525 1-1 1H1c-.55228475 0-1-.4477153-1-1v-2c0-.55228475.44771525-1 1-1zm0 7h2c.55228475 0 1 .4477153 1 1v2c0 .5522847-.44771525 1-1 1H1c-.55228475 0-1-.4477153-1-1v-2c0-.5522847.44771525-1 1-1z" fill="currentColor" fill-rule="evenodd"></path></svg></button>
	</div>
	{%- endif -%}
{%- endcapture -%}

{%- capture shorting -%}
	{%- if section_st.sortby -%}
		<div class="collection-filters__item sorting{% if section_st.sbpos == 'top' %} fl f-aic tpShort{% endif %} filter-sorting-wrapper" data-filter-type="sort_by">
      {% comment %} <label class="hidden_txt" for="SortBy">{{ 'collections.general.sort_by_label' | t }}</label> {% endcomment %}
			{%- assign sort_by = collection.sort_by | default: collection.default_sort_by -%}
			<select name="sort_by" class="select__select sortBy mb0" id="SortBy" form="CollectionFiltersForm">
				{%- for option in collection.sort_options -%}
          <option value="{{ option.value | escape }}"{% if option.value == sort_by %} selected="selected"{% endif %}>{{ option.name | escape }}</option>
        {%- endfor -%}
			</select>
      <a href="#" class="btn-sort_by selected-sort_by js-toggle crlgTtl fl f-aic{% if ismobile %} f-jcc{% endif %}" title="{{ 'sections.navigation.currency' | t }}">
        {% render 'icon-sorting' %}
        {%- assign current_sort = collection.sort_options | where: "value", sort_by | first -%}
        <span data-sort-by-text>{{ current_sort.name | escape }}</span>
      </a>
      <ul id="custom-sort_by" class="ctScroll cnrList pa tl">
        {%- for option in collection.sort_options -%}
          <li tabindex="-1">
            <a class="clOtp{% if option.value == sort_by %} selected{% endif %} fl f-aic"
              href="#"
              data-value="{{ option.value }}">
              <span>{{ option.name | escape }}</span>
              <span class="selected-icon">{% render 'icon-tick' %}</span>
            </a>
          </li>
        {%- endfor -%}
      </ul>
		</div>
	{%- endif -%}
{%- endcapture -%}
{%- capture productcount -%}
	{%- if section_st.pcount -%}
    <div id="itemsCount" class="tlbr_item">
      <span class="tlbr_pr_cnt collection-product-count light" role="status">
        {%- if collection.results_count -%}
          {{ 'collections.general.product_count' | t: product_count: collection.terms, count: collection.results_count }}
        {%- elsif collection.products_count == collection.all_products_count -%}
          {{ 'collections.general.items_with_count' | t: count: collection.products_count }}
        {%- else -%}
          {{ 'collections.general.product_count' | t: product_count: collection.products_count, count: collection.all_products_count }}
        {%- endif -%}
      </span>
    </div>
    {%- endif -%}
{%- endcapture -%}

{%- capture products_list -%}
      {%- if collection.products.size == 0 -%}
        <div class="collection">
          <div id="collectionPr" class="grid rwcols-{{ section_st.gridmb }} rwcols-md-{{ section_st.gridtb }} rwcols-lg-{{ section_st.grid }} rwcols-xl-{{ section_st.gridlg }} grid-products" id="collectionPr" data-id="{{ section.id }}">
            <div class="collection--empty">
              <p class="collection-product-count light hide" role="status">{{ 'collections.general.product_count' | t: product_count: collection.products_count, count: collection.all_products_count }}</p>
              <div class="title-wrapper w_100 fl f-jcc">
                <div class="title title--primary">
                  <h3 class="mb5">{{ 'collections.general.empty' | t }}</h3>
                  <p>{{ 'collections.general.use_fewer_filters_html' | t: link: collection.url, class: "underlined-link link" }}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      {%- else -%}
          <div class="collection">
              {%- if pageurl == 'list' -%}
                  <div id="collectionPr" class="listview_items">
                  {%- for product in collection.products -%}
                      <product-card class="lv_item fl f-row-md f-col mb20 {% render 'animate-data', css:true %}" {% render 'animate-data' %}>{% render 'product-card-list', product: product, section_st: section_st, sizes:'(min-width:768px) 250px, 100vw'  %}</product-card>
                  {%- endfor -%}
                  </div>
              {%- else -%}
                  <div id="collectionPr" class="grid rwcols-{{ section_st.gridmb }} rwcols-md-{{ section_st.gridtb }} rwcols-lg-{{ section_st.grid }} rwcols-xl-{{ section_st.gridlg }} grid-products">
                      {%- for product in collection.products -%}
                          {%- capture sizes -%}
                              {%- if section_st.filters and section_st.sbpos != 'top' and section_st.sbpos != 'popup' -%}
                                  (min-width:1024px) calc(({{ page_width }} - {{ settings.grid_space | times: section_st.grid | minus:settings.grid_space | plus:340 }}px) / {{ section_st.grid }}),(min-width:768px) calc((100vw - {{ settings.grid_space | times: section_st.gridtb | minus:section_st.gspace }}px) / {{ section_st.gridtb }}), calc((100vw - {{ settings.grid_spacem | times: section_st.gridmb | minus:settings.grid_spacem }}px) / {{ section_st.gridmb }})
                              {%- else -%}
                                  (min-width:1024px) calc(({{ page_width }} - {{ settings.grid_space | times: section_st.grid | minus:settings.grid_space }}px) / {{ section_st.grid }}),(min-width:768px) calc((100vw - {{ settings.grid_space | times: section_st.gridtb | minus:section_st.gspace }}px) / {{ section_st.gridtb }}), calc((100vw - {{ settings.grid_spacem | times: section_st.gridmb | minus:settings.grid_spacem }}px) / {{ section_st.gridmb }})
                              {%- endif -%}
                          {%- endcapture -%}
                          <div class="gitem fl {% render 'animate-data', css:true %}" {% render 'animate-data' %}>{% render 'product-card-grid', product:product, section_st:section_st, sizes:sizes %}</div>
                      {%- endfor -%}
                  </div>
              {%- endif -%}
          </div>
      {%- endif -%}
      <div id="pagination" class="infinitpaginOuter mt30">
            {%- if section_st.pagination == "infinite" or section_st.pagination == "button" -%}
                {%- if paginate.next -%}
                    <div class="infinitpagin tc">
                        {%-liquid
                          assign view_type = '&type=grid'
                          if pageurl == 'list'
                             assign view_type = '&type=list'
                          endif
                          assign pgurl = paginate.next.url
                          unless paginate.next.url contains "&type="
                            assign pgurl = paginate.next.url | append: view_type
                          endunless
                        -%}
                        {%- if section_st.pagination == "infinite" -%}
                            <a href="{{ pgurl }}" class="loadMoreAct infinite">{% render 'icon-loading' %}<p>{{ 'general.pagination.loading' | t }}</p></a>
                        {%- else -%}
                            <a href="{{ pgurl }}" class="btn loadMoreAct"><span class="txt">{{ 'general.pagination.loadmore' | t }}</span><div class="loading__spinner"><svg class="at-icon at-spin"><use xlink:href="#icon-loading"></use></svg></div></a>
                        {%- endif -%}
                    </div>
                {%- endif -%}
            {%- else -%}
                {%- render 'pagination', paginate: paginate -%}
            {%- endif -%}
        </div>
{%- endcapture -%}

	<div class="facets{% if section_st.sw %} fw-sec{% if section_st.npd %} npd{% endif %}{% else %} page-width{% endif %}" id="Collection">
		<div class="{% unless section_st.sbpos == 'top' %}fl f-col f-ais f-row-md{% endunless %}">
			{%- if section_st.filters and section_st.sbpos != 'top' -%}
				<filters-form class="sidebar anim sb_filter collection-filters{% if section_st.sbpos == 'popup' %} anim sb_popup{% endif %}{% if section_st.sbpos == 'right' %} order2 sb_right{% endif %}" id="main-collection-filters" data-id="{{ section.id }}">
                  {%- render 'filters', section_st: section_st, section:section -%}
                </filters-form>
			{%- endif -%}
				
          <div class="main-col fl1 w_100" id="CollectionProductGrid">            
                <div class="fl f-col row-gap{% if section_st.talign %} tc{% endif %} mb20" style="--gap:20px;--gapm:15px">                  
                    {%- if section_st.climg and collection.image != blank -%}
                        {%- capture image_sizes -%}
                              {%- if section_st.filters and section_st.sbpos != 'top' and section_st.sbpos != 'popup' -%}
                                  (min-width:1024px) calc(({{ page_width }} - 340px) / 2), calc((100vw - 30px)
                              {%- else -%}
                                  (min-width:1024px) calc({{ page_width }} / 2), calc((100vw - 30px)
                              {%- endif -%}
                          {%- endcapture -%}
                        {{ collection.image | image_url: width: collection.image.width | image_tag: loading:'lazy', width:collection.image.width, height:collection.image.height, class:'imgAt cl_img', sizes:image_sizes, widths:"400,550,700,900,1200,1500" }}                   
                   {%- endif -%}                                       
                  {%- if section_st.clttl != blank -%}<h1 class="page-title m0{% if section_st.talign %} tc{% endif %}">{{ collection.title }}</h1>{%- endif -%}
                  {%- if collection.description != blank and section_st.des_pos == "1" -%}<div class="rte"> {{ collection.description }} </div>{%- endif -%}
                </div>
            	{%- if section_st.filters and section_st.sbpos == 'top' -%}
					<filters-form class="anim anim fl f-aic f-jcsb flTop mb20 sb_filter{% if section_st.flshadow %} ddshadow{% endif %}" id="main-collection-filters" data-id="{{ section.id }}">
                      {%- render 'filters', section_st: section_st, section:section -%}
                      {{- shorting -}}
                    </filters-form>
				{%- endif -%}
            
				<div class="tlbr fl f-jcsb f-aic pb20 grid gap10">
          {%- if section_st.filters -%}
            <div class="action-filter fl f-aic f-wrap gap10">
              <button type="button" class="btn-filter fl f-aic fwm {% if section_st.sbpos != 'popup' %} hide-lg{% endif %}" area-label="{{ 'collections.general.filter_button' | t }}">
                <svg class="at-icon mr5" fill="none" height="512" viewBox="0 0 24 24" width="512" xmlns="http://www.w3.org/2000/svg"><path d="m3 6.25c-.41421 0-.75.33579-.75.75s.33579.75.75.75zm0 10c-.41421 0-.75.3358-.75.75s.33579.75.75.75zm6 1.5c.41421 0 .75-.3358.75-.75s-.33579-.75-.75-.75zm12 0c.4142 0 .75-.3358.75-.75s-.3358-.75-.75-.75zm-6-11.5c-.4142 0-.75.33579-.75.75s.3358.75.75.75zm6 1.5c.4142 0 .75-.33579.75-.75s-.3358-.75-.75-.75zm-18 0h3v-1.5h-3zm0 10h6v-1.5h-6zm15 0h3v-1.5h-3zm-3-10h6v-1.5h-6zm2.25 9.25c0 1.2426-1.0074 2.25-2.25 2.25v1.5c2.0711 0 3.75-1.6789 3.75-3.75zm-2.25 2.25c-1.2426 0-2.25-1.0074-2.25-2.25h-1.5c0 2.0711 1.6789 3.75 3.75 3.75zm-2.25-2.25c0-1.2426 1.0074-2.25 2.25-2.25v-1.5c-2.0711 0-3.75 1.6789-3.75 3.75zm2.25-2.25c1.2426 0 2.25 1.0074 2.25 2.25h1.5c0-2.0711-1.6789-3.75-3.75-3.75zm-3.75-7.75c0 1.24264-1.0074 2.25-2.25 2.25v1.5c2.0711 0 3.75-1.67893 3.75-3.75zm-2.25 2.25c-1.24264 0-2.25-1.00736-2.25-2.25h-1.5c0 2.07107 1.67893 3.75 3.75 3.75zm-2.25-2.25c0-1.24264 1.00736-2.25 2.25-2.25v-1.5c-2.07107 0-3.75 1.67893-3.75 3.75zm2.25-2.25c1.2426 0 2.25 1.00736 2.25 2.25h1.5c0-2.07107-1.6789-3.75-3.75-3.75z" fill="#28303f"/></svg>
                  {{ 'collections.general.filter_button' | t }}
              </button>
              {{ active_filters }}
            </div>
          {%- endif -%}
          {{ productcount }}{{ pr_view }}{{ shorting }}
        </div>
				{{ products_list | strip_newlines }}
        {%- if collection.description != blank and section_st.des_pos == "2" -%}<div class="rte cl_desc mt30">{{ collection.description }}</div>{%- endif -%}	
			</div>          
		</div>
 	</div>
{%- endpaginate -%}
{%- for filter in collection.filters -%}
    {% if filter.type == 'price_range' %}
	<script src="{{ 'toolcool-range-slider.min.js' | asset_url }}" defer="defer"></script>
	{% endif %}
{%- endfor -%}
{%- endcapture -%}
<div class="sec_cov{% if section_st.bgimg != blank %} bgImg lazyload{% endif %}" style="--sbg:{{ section_st.bg }};--sst:{{ section_st.sst }}px;--ssb:{{ section_st.ssb }}px;--sstm:{{ section_st.sstm }}px;--ssbm:{{ section_st.ssbm }}px;--overlay:{{ section_st.overlay | color_modify: 'alpha', section_st.overlay_op }};"
    {%- if section_st.bgimg != blank %} data-bgset="{{ section_st.bgimg | image_url: width: section_st.bgimg.width | image_tag: widths: '400,600,800,1000,1400,1600,2000,2400,3000' | split: 'srcset="' | last | split: '"' | first }}" data-sizes="auto" data-parent-fit="contain"{% endif %}> 
    {{- collection_page | strip_newlines | remove:'  ' -}}
</div>
<script src="{{ 'collections.js' | asset_url }}" defer></script>
