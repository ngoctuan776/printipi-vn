{%- liquid
   assign section_st = section.settings
-%}
<div class="sec_cov sec__pdp-bottom" style="--sbg:{% if section_st.bgg != blank %}{{ section_st.bgg }}{% else %}{{ section_st.bg }}{% endif %};--sst:{{ section_st.sst }}px;--ssb:{{ section_st.ssb }}px;--sstm:{{ section_st.sstm }}px;--ssbm:{{ section_st.ssbm }}px">
	<div class="{% if section_st.sw %}fw-sec{% else %}page-width{% endif %}" data-section-id="{{ section.id }}">
        <div class="grid">
            <div class="gitem ss-left-box">
				<div class="product-description rte">{{ product.description }}</div>
                {%- for block in section.blocks -%}
                    {%- if block.type == 'related-products' -%}
                        {% render 'pdp-related-prds', block: block %}
                    {%- endif -%}
                    {%- if block.type == 'rvp' -%}
                        {% render 'pdp-rvp-prds', block: block %}
                    {%- endif -%}
                {%- endfor -%}
			</div>
            <div class="gitem ss-right-box">
                {%- for block in section.blocks -%}
                    {%- if block.type == '@app' -%}
                        {% render block %}
                    {%- endif -%}
                {%- endfor -%}
            </div>
        </div>
    </div>
</div>
