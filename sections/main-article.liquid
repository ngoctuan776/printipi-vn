<style type="text/css">
  :root {
   	--text_case:{{ section_st.text_case }};    
    --bottom_bdr:{{ section_st.bottom_bdr }};   
    --links_fs:{{ section_st.links_fs }}px;
    --date_fs:{{ section_st.links_fs | minus : 2 }}px;
	--links_cl:{{ section_st.links_cl }}; --links_cl_hov:{{ section_st.links_cl_hv }};    
    --comment_bg:{{ section_st.cbg }}; --comment_cl:{{ section_st.ccl }};    
