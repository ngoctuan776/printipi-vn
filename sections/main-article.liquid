<div class="sec_cov{% if section_st.bgimg != blank %} bgImg lazyload{% endif %}" style="--sbg:{{ section_st.bg }};--sst:{{ section_st.sst }}px;--ssb:{{ section_st.ssb }}px;--sstm:{{ section_st.sstm }}px;--ssbm:{{ section_st.ssbm }}px;--overlay:{{ section_st.overlay | color_modify: 'alpha', section_st.overlay_op }};"
   {% if section_st.bgimg != blank %}data-bgset="{{ section_st.bgimg | image_url: width: section_st.bgimg.width | image_tag: widths: '400,600,800,1000,1400,1600,2000,2400,3000' | split: 'srcset="' | last | split: '"' | first }}" data-sizes="auto" data-parent-fit="contain"{% endif %}> 
	 <article class="{% if section_st.sw %} fw-sec{% else %} page-width{% endif %}" >
      <div class="fl f-col f-row-lg">
      <div class="fl1 w_100{% if section_st.sbposi == 'left' %} order2{% endif %}">   
      <div class="blog_listview" style="--cl: #000000;--fs:{{ section_st.tfs }}px;--fsm:{{ section_st.tfsm }}px;--fw:{{ section_st.tfw }};--lh:{{section_st.lh }}">                  
        <{{ section_st.htag }} class="blogTtl rgTxt mb10{% if section_st.tcase %} ttu{% endif %}">{{ article.title }}</{{ section_st.htag }}>
        {% if section_st.date or section_st.author or blog.comments_enabled? %}
                <ul class="fl mb20 artDet{% if section_st.post_case %} ttu{% endif %}" style="--icns:14px;">                                               
                  {% if section_st.date %}
                      <li>
                      <span class="sep-{{ section_st.post_sep }} mr5">{% if section_st.post_sep == '1' %}{% render 'icon-date' %} {% elsif section_st.post_sep == '2'%} 〡 {% elsif section_st.post_sep == '3' %} ● {% elsif section_st.post_sep == '4' %} ━ {% endif %}</span>
                      <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: format: 'month_day_year' }}</time></li>
                  {% endif %}
                  {% if section_st.author %}
                      <li class="fl">
                      <span class="sep-{{section_st.post_sep }} mr5">{% if section_st.post_sep == '1' %}{% render 'icon-user' %} {% elsif section_st.post_sep == '2'%} 〡 {% elsif section_st.post_sep == '3' %} ● {% elsif section_st.post_sep == '4' %} ━ {% endif %}</span>
                      {{ 'blogs.article.by_author' | t }} <span class="ml5">{{ article.author }}</span></li>
                  {% endif %}
                  {% if blog.comments_enabled? and article.comments_count > 0 %}
                  <li class="cmnt">
                      <span class="sep-{{ section_st.post_sep }} mr5">{% if section_st.post_sep == '1' %}{% render 'icon-comment' %} {% elsif section_st.post_sep == '2'%} 〡 {% elsif section_st.post_sep == '3' %} ● {% elsif section_st.post_sep == '4' %} ━ {% endif %}</span>           
                      <a href="{{ article.url }}#comments">{{ 'blogs.comments.comments_with_count' | t: count: article.comments_count }}</a>
                  </li>
                  {% endif %}
                </ul>
        {% endif %}
        {% if article.image and section_st.ftimg %}
             <div class="mb20" style="--rounded:{{ section_st.bbrad }}px;">
                 {{ article.image | image_url: width: article.image.width | image_tag: loading:'lazy', width:article.image.width, height:article.image.height, class:'imgAt', sizes:sizes, widths:"400,560,740,980,1280,1600,2000" }}
              </div>
        {% endif %}
        <div class="rte mb20">{{ article.content }}</div>

        {% if section_st.tags and article.tags.size > 0 %}
        <ul class="blogTags fl f-aic f-wrap mb10">
              <li>{{ 'blogs.article.posted_in' | t }}: &nbsp;</li>
            {% for tag in article.tags %}
            <li><a class="ml5" href="{{ blog.url }}/tagged/{{ tag | handle }}">{{ tag }}</a></li>
            {% endfor %}
        </ul>
        {% endif %}

        {% if section_st.show_share_buttons or blog.next_article or blog.previous_article %}
            <hr>
            <div class="fl f-wrap f-jcsb">              	                
				{% if section_st.show_share_buttons %}
                   {%- assign share_url = article.url -%}
                    <div class="mb20">{% render 'social-sharing', share_title: article.title, share_link:share_url, share_permalink: article.url, share_image: article.image, clname:'' %}</div>
				{% endif %}
                {% if blog.next_article or blog.previous_article %}
                <div class="blog-nav mb20 fl f-jcc {% unless section_st.show_share_buttons %} fl1{% endunless %}">
                    {% if blog.previous_article %}<a href="{{ blog.previous_article }}">{% render 'icon-arrowl', class: 'arwl left mr5' %}{{ 'blogs.article.previous' | t }}</a>{% endif %}
                    <span class="m_auto"> &nbsp; &nbsp; </span>
                    {% if blog.next_article %}<a href="{{ blog.next_article }}">{{ 'blogs.article.next' | t }}{% render 'icon-arrowl', class: 'arwl right ml5' %}</a>{% endif %}
                </div>
                {% endif %}
            </div>
        {% endif %} 

        <!-- Article comments --> 
        {%- assign number_of_comments = article.comments_count -%}

        {% if comment and comment.created_at %}
        {%- assign number_of_comments = article.comments_count | plus: 1 -%}
        {% endif %} 
        {% if blog.comments_enabled? %}
        {% if number_of_comments > 0 %}<br>
        <h2 class="sub-title mb0">{{ 'blogs.comments.comments_with_count' | t: count: number_of_comments }}</h2>
        <hr />
        {% paginate article.comments by 10 %}

        {% comment %}#comments is required, it is used as an anchor link by Shopify.{% endcomment %}
        <div id="comments">
            
          <ul class="comments mb30">
            {% comment %}If a comment was just submitted with no blank field, show it.{% endcomment %}
            {% if comment and comment.created_at %}
                <li id="{{ comment.id }}" class="comment"> {% render 'comment' %}</li>
                <li><hr /></li>
            {% endif %}
            {% for comment in article.comments %}
                <li id="{{ comment.id }}" class="comment"> {% render 'comment', comment:comment %} </li>
                {% unless forloop.last %}<li><hr /></li>{% endunless %}
            {% endfor %}
          </ul>
          {% if paginate.pages > 1 %}{% render 'pagination' %}{% endif %}
          </div>
        {% endpaginate %}


        {% endif %}
        {% form 'new_comment', article %}
          <h4 class="h3">{{ 'blogs.comments.title' | t }}</h4>
          {% if comment and comment.created_at %}
              <p class="border form-success">{% if blog.moderated? %}{{ 'blogs.comments.success_moderated' | t }}{% else %}{{ 'blogs.comments.success' | t }}{% endif %}</p>
          {% endif %}
          {{ form.errors | default_errors }}
          <div class="grid">
            <div class="gitem wd50-md">
              <label for="CommentAuthor">{{ 'blogs.comments.name' | t }}</label>
              <input type="text" name="comment[author]" id="CommentAuthor" class="input-full w_100{% if form.errors contains 'author' %} input--error{% endif %}" value="{{ form.author }}">
            </div>
            <div class="gitem wd50-md">
              <label for="CommentEmail">{{ 'blogs.comments.email' | t }}</label>
              <input type="email" name="comment[email]" id="CommentEmail" class="input-full w_100{% if form.errors contains 'email' %} input--error{% endif %}" value="{{ form.email }}" autocorrect="off" autocapitalize="off">
            </div>
            <div class="gitem">
              <label for="CommentBody">{{ 'blogs.comments.message' | t }}</label>
              <textarea name="comment[body]" id="CommentBody" class="input-full w_100{% if form.errors contains 'body' %} input--error{% endif %}">{{ form.body }}</textarea>
            </div>
          </div>
          {% if blog.moderated? %}
          <p class="fine-print mt0">{{ 'blogs.comments.moderated' | t }}</p>
          {% endif %}
          <input type="submit" class="btn" value="{{ 'blogs.comments.post' | t }}">
          {% endform %}
        {% endif %} 

        <!-- article end --> 
      </div>
        <div class="tc mt30"><a href="{{ blog.url }}" class="btn">{% render 'icon-arrowl', class: 'arwl left' %} {{ 'blogs.article.back_to_blog' | t: title: blog.title }}</a></div>
    </div>

	<!-- sidebar --> 	  
    {% unless section_st.sbposi == 'nosidebar' %}
    <div class="sidebar{% if section_st.sbposi == 'left' %} mr30{% else %} ml30{% endif %}{% if section_st.sidem %} hide-sm hide-md{% endif %}" style="--bdr:{{ section_st.ttlbdr }};--cl:{{ section_st.wdTtlcl }};--fs:{{ section_st.wdTtl }}px;--fsm:{{ section_st.wdTtl }}px;--fw:{{ section_st.wdTtlwt }};">
        {% for block in section.blocks %}
            {% render 'blog-sidebar', blog:blog, blockType: block.type, block: block.settings, section: section.settings, bkat: block.shopify_attributes %}
        {% endfor %}
    </div>
    {% endunless %}  
