{%- liquid 
    assign section_st = section.settings
    assign page_width = settings.cntwd | append: 'px'
    if section_st.sw
        assign page_width = '100vw'
    endif
-%}
<style type="text/css">
  :root {          
  	--text_case:{{ section_st.text_case }}; --bottom_bdr:{{ section_st.bottom_bdr }};   
    --links_fs:{{ section_st.links_fs }}px; --date_fs:{{ section_st.links_fs | minus : 2 }}px;
    --links_cl:{{ section_st.links_cl }}; --links_cl_hov:{{ section_st.links_cl_hv }};
  }
  @media only screen and (min-width:767px){
    .sec-main-blog .sec-ttl-wrp {
      padding-bottom: 30px;
    }
  }
</style>
{% paginate blog.articles by section_st.posts %}
<div class="sec-main-blog sec_cov{% if section_st.bgimg != blank %} bgImg lazyload{% endif %}" style="--sbg:{{ section_st.bg }};--sst:{{ section_st.sst }}px;--ssb:{{ section_st.ssb }}px;--sstm:{{ section_st.sstm }}px;--ssbm:{{ section_st.ssbm }}px;--overlay:{{ section_st.overlay | color_modify: 'alpha', section_st.overlay_op }};"
   {% if section_st.bgimg != blank %}data-bgset="{{ section_st.bgimg | image_url: width: section_st.bgimg.width | image_tag: widths: '400,600,800,1000,1400,1600,2000,2400,3000' | split: 'srcset="' | last | split: '"' | first }}" data-sizes="auto" data-parent-fit="contain"{% endif %}> 
	 <div class="{% if section_st.sw %} fw-sec{% else %} page-width{% endif %}" style="--fs:{{ section_st.tfs }}px;--fsm:{{ section_st.tfsm }}px;--fw:{{ section_st.tfw }};--lh:{{section_st.lh }};--cl:{{ section_st.wdTtlcl }};">
       <div class="sec-ttl-wrp fl f-jcsb f-aic">
        <div class="sec-ttl tl">
          <{{ section_st.htag }} class="blogHead rgTxt {% if section_st.tcase %} ttu{% endif %}">{{ blog.title }}</{{ section_st.htag }}>
          <div class="sbttl color-text">{{ 'blogs.article.subtitle' | t: item_count: blog.articles_count }}</div>
        </div>
      </div>
       <div class="fl f-col f-row-lg">
        <div class="blogm fl1 w_100{% if section_st.sbposi == 'left' %} order2{% endif %}" style="--img_rad:{{ section_st.bbrad }}px;">
            <div class="{% if section_st.layout == 'list' %}blog_listview {% endif %}">                
                {% if section_st.layout == 'g1' or section_st.layout == 'g2' %}
                    <div class="grid rwcols-{{ section_st.gridmb }} rwcols-md-{{ section_st.gridtb }} rwcols-lg-{{ section_st.grid }} rwcols-xl-{{ section_st.gridlg }}">
                        {% for article in blog.articles %}
                            {%- capture sizes -%}
                              {% if section_st.sbposi == 'nosidebar' %}
                                  (min-width:1024px) calc(({{ page_width }} - {{ 30 | times: section_st.grid | minus:30 }}px) / {{ section_st.grid }}),(min-width:768px) calc((100vw - {{ 15 | times: section_st.gridtb | minus:15 }}px) / {{ section_st.gridtb }}), calc((100vw - {{ 10 | times: section_st.gridmb | minus:10 }}px) / {{ section_st.gridmb }})
                              {%- else -%}
                                  (min-width:1024px) calc(({{ page_width }} - {{ 30 | times: section_st.grid | minus:30 | plus:340 }}px) / {{ section_st.grid }}),(min-width:768px) calc((100vw - {{ 15 | times: section_st.gridtb | minus:15 }}px) / {{ section_st.gridtb }}), calc((100vw - {{ 10 | times: section_st.gridmb | minus:10 }}px) / {{ section_st.gridmb }})
                              {%- endif -%}
                            {%- endcapture -%}
                            <div class="gitem at{{ section_st.layout }} {% render 'animate-data', css:true %}" {% render 'animate-data' %}>{% render 'blog-card-grid', article:article, section_st:section_st, sizes:sizes %}</div>
                        {% endfor %}
                    </div>
                {% else %}
                    {% for article in blog.articles %}
                        <div class="mb40 at{{ section_st.layout }}{% if section_st.layout == 'l1' or section_st.layout == 'l2' %} fl-md f-aic{% endif %} {% render 'animate-data', css:true %}" {% render 'animate-data' %}> 
                            {% if article.image %}
                                <div class="articleImg of_hidden mb20{% if section_st.layout == 'l1' or section_st.layout == 'l2' %} wd40-md mb0-md{% endif %}">
                                    <a class="db pr" href="{{ article.url }}" style="padding-bottom:{{ section_st.img_ratio }}%;">
                                        {{ article.image | image_url: width: article.image.width | image_tag: loading:'lazy', class:'imgFt brad' , sizes: sizes, widths:"320,460,600,780,900" }}
                                    </a>
                                </div>
                            {% endif %}
                            <div {% if section_st.layout == 'l1' or section_st.layout == 'l2' %} class="fl1-md"{% endif %}>
                                {% if section_st.tags and article.tags.size > 0 %}
                                    <div class="blogTags fl f-wrap mb10 col-gap" style="gap:10px;">{% for tag in article.tags %}<a href="{{ blog.url }}/tagged/{{ tag | handle }}">{{ tag }}</a>{% endfor %}</div>
                                {% endif %}
                                <{{ section_st.htag }} class="blogTtl rgTxt {{ section_st.tff }} mb10{% if section_st.tcase %} ttu{% endif %}"><a href="{{ article.url }}">{{ article.title }}</a></{{ section_st.htag }}>

                                {% if section_st.date or section_st.author or section_st.comment %}
                                    <ul class="fl artDet mb20" style="--icns:14px;">                                               
                                        {% if section_st.date %}
                                            <li><time class="fl f-ais" datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{% render 'icon-date' %}{{ article.published_at | date: format: 'month_day_year' }}</time></li>
                                        {% endif %}
                                        {% if section_st.author %}
                                            <li class="fl">{% render 'icon-user' %}<span>{{ 'blogs.article.by_author' | t }} <span class="clr_body">{{ article.author }}</span></span></li>
                                        {% endif %}
                                        {% if section_st.comment and blog.comments_enabled? and article.comments_count > 0 %}
                                            <li class="cmnt"><a href="{{ article.url }}#comments">{% render 'icon-comment' %}{{ 'blogs.comments.comments_with_count' | t: count: article.comments_count }}</a></li>
                                        {% endif %}
                                    </ul>
                                {% endif %}
                                {% if section_st.desc %}
                                    <div class="rte mb20">
                                        {% if article.excerpt.size > 0 %}
                                            {{ article.excerpt }}
                                        {% else %}
                                            {{ article.content | strip_html | truncatewords: section_st.dwords }}
                                        {% endif %}
                                    </div>
                                {% endif %}
                                {% if section_st.more %}<p><a href="{{ article.url }}" class="btnLink">{{ 'blogs.article.read_more' | t }}</a></p>{% endif %}
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
                {% if paginate.pages > 1 %}{% render 'pagination', paginate:paginate %}{% endif %}
            </div>
        </div>
        {% unless section_st.sbposi == 'nosidebar' %}
            <div class="sidebar{% if section_st.sbposi == 'left' %} mr40{% else %} ml40{% endif %}{% if section_st.sidem %} hide-sm hide-md{% endif %}" style="--bdr:{{ section_st.ttlbdr }};--fs:{{ section_st.wdTtl }}px;--fsm:{{ section_st.wdTtl }}px;--fw:{{ section_st.wdTtlwt }};">
                {% for block in section.blocks %}
                    {% render 'blog-sidebar', blog:blog, blockType: block.type, block: block.settings, section: section_st, bkat: block.shopify_attributes %}
                {% endfor %}
            </div>
        {% endunless %}
     </div>
