{%- if image != blank -%}
	{%- if sizes == blank -%}{% assign sizes = '375,540,780,1080,1296,1512,2000,2450,3000,3600' %}{%- endif -%}
	{%- assign imgsizes = sizes | remove:" " | split: ',' -%}
	{%- for size in imgsizes -%}
		{%- assign width = size -%}
		{%- assign lsize = size | plus: 0 -%}
		{%- if image.width >= lsize -%}{{ image | image_url: width: width }} {{ size }}w,{%- endif -%}
	{%- endfor -%}
	{{ image | image_url: 'master' }} {{ image.width }}w
{%- endif -%}