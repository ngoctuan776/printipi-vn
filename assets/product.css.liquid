.rating_icons{
  display:flex;
  position:relative;
  max-width:100%;
  width: max-content;
}
.rating_icons svg {
  width: 11px;
  min-width: 11px;
  height: auto;
}
.rating_icons svg rect {
  width: 100%;
}
.rating__active{
  position:absolute;
  top:0;
  left:0;
  overflow: hidden;
  -webkit-backface-visibility: hidden;
  -moz-backface-visibility: hidden;
  -webkit-transform: translate3d(0, 0, 0);
  -moz-transform: translate3d(0,0,0);
  z-index:1;
}
.item-icons {
  display:flex;
  flex-direction:row;
  gap:4px;
}
.rating-avg {
  font-weight:500;
  margin: 0 7px 0 11px;
  color: var(--color-main-text);
}
.product__info-wl-r {
  gap: 15px;
}

.product__info .qtyField {
  background: var(--bgr-light);
  border: none;
  height: 40px;
  border-radius: 8px;
}
.product__info .qtyField input {font-weight: 500;}
.product__info .qtyField > * {
  background: transparent;
}
.product__info .qtyField .qty {
  padding: 0;
  width: 40px;
}
.product__info .qtyBtn {
  width: 35px;
  padding: 0;
}
.product__info .qtyField svg {pointer-events: none;}

