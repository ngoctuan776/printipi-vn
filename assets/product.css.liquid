@media only screen and (min-width:1025px) {
  .product-single-tee {
    display: grid;
    gap: 30px;
    margin: 0;
    grid-template-columns: 256px minmax(0, 1fr) 540px;
    grid-template-areas: "area1 area2 area3";
  }

  .product-single-tee > .gitem {
    padding-left: 0;
    padding-right: 0;
  }
  .product-single-tee > .gitem.product__media-wrapper {
    padding-right: 30px;
  }

  .product-single-tee .product__images-wrapper {
    grid-area: area1;
    width: auto;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }
  .product-single-tee .product__images-wrapper .item {
    border-radius: 8px;
    overflow: hidden;
  }
  .product-single-tee .product__media-wrapper {
    grid-area: area2;
    width: auto;
  }
  .product-single-tee .product__media-wrapper:after {
    content: "";
    position: absolute;
    top: -30px;
    right: 0;
    width: 1px;
    height: auto;
    bottom: -30px;
    background-color: var(--border-color);
  }
  .product-single-tee .product__info {
    grid-area: area3;
    width: auto;
  }
  .product-single-tee .product__info .wrap-product-info {
    margin-left: 0;
  }
}

/* Tee form */
div.tee-dialog, div.tee-form-wrapper, div.tee-gallery,
.teeinblue-theme-modern .tee-dialog, .teeinblue-theme-modern .tee-form-wrapper {
  --tee-primary-lighten-color: var(--color-main);
  --tee-preview-button-text-color: var(--color-main);
  --tee-form-header-color: var(--color-main-text);
  --tee-font-size: 12px;
  --tee-field-heading-font-size: 12px;
  --tee-field-select-color: var(--color-main-text);
  --tee-customize-main-form-border-color: #DDDDDD;
  --tee-form-input-height: 40px;
  --tee-atc-border-radius: 8px;
  --tee-clipart-border-radius: 8px;
  --tee-form-input-border-radius: 8px;
  --tee-form-input-height: 40px;
  --tee-clipart-active-border-width: 1px;
  --tee-input-active-border-width: 1px;
  --tee-field-select-focus-border-width: 1px;
  --tee-form-input-color: var(--color-main-text);
  --tee-filed-select-focus-padding: 7px 35px 7px 15px;
}

.teeinblue-theme-modern .tee-customize-main-form {border: none;}
.tee-form-header {background-color: transparent;padding: 0 0 10px 0;text-align: left;}
.tee-form-inputs {padding: 0;}
.tee-field__heading {font-weight: 500 !important;}
.tee-field__select:focus-visible,
.tee__input:focus-visible {box-shadow: none;}
.tee-btn, .tee-song__btn {font-weight: 500;}
.tee-clipart-row {
  margin: 0;
  width: 100%;
  gap: 10px;
}
.tee-clipart-col {
  padding: 0;
  flex: 0 0 auto;
  max-width: none;  
  min-width: 60px;
}
.teeinblue-theme-modern .tee-clipart-checkmark {
  border: none;
  width: 11px;
  height: 11px;
  top: auto;
  bottom: 4px;
  right: 4px;
}

.tee-field.tee-field--text {
  display: flex;
}
.tee-field {display: flex;flex-wrap: wrap;}
.tee-field > div {width: 100%;}
.tee-field .tee-field__input {flex: 1;}
.tee-field .tee-field__input + .tee-field__subfield {
  flex: 0 0 40px; 
  padding-left: 10px;
  width: 40px;
  margin-top: 0;
  box-sizing: content-box;
}
.tee-field .tee-field__input + .tee-field__subfield .tee-field__header {display: none;}
.tee-colorpicker-handle {border-radius: 8px;box-shadow: none;border: 1px solid var(--tee-customize-main-form-border-color);}
.tee-colorpicker-body {left: auto;right: 0;}
.tee-switch__input {padding-top: 10px;padding-bottom: 10px;}
.teeinblue-theme-modern .tee-thumbnails__button {display: none;}